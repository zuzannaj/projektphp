{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.change_profile'|trans }} {{ user.firstName }}
{% endblock %}

{% block body %}
        <h1>{{ 'title.change_profile'|trans({'%id%': user.id|default('')}) }}</h1>
        {{ form_start(form, { method: 'PUT', action: url('profile_change', {id: user.id}) }) }}
        {{ form_widget(form) }}
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
        {{ form_end(form) }}
{% endblock %}