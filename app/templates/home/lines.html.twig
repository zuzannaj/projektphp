{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.buslines'|trans }}
{% endblock %}
{% block body %}
    <h1>{{ 'title.buslines'|trans }}</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'bl.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.number'|trans, 'bl.number') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for busline in pagination %}
                <tr>
                    <td>{{ busline.id }}</td>
                    <td>{{ busline.number }}</td>
                    <td>
                        <a href="{{ url('view_line', {id: busline.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}


{% endblock  %}